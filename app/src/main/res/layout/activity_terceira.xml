<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SegundaActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_valor_pago_comic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="20dp"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="20dp"
        tools:text="Valor total: " />

    <EditText
        android:id="@+id/text_cupom"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_toRightOf="@+id/text_valor_pago_comic"
        android:ems="10"
        android:hint="Digite o cÃ³digo do cupom de desconto"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/buttonFinalizarCompra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="100dp"
        android:text="Finalizar compra" />

</LinearLayout>